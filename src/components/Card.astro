---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
	title: string;
	href: string;
}

const { title, ...props } = Astro.props;
---

<a {...props} class="bg-zinc-950 border border-zinc-700 rounded-3xl text-zinc-100 py-4 px-6 hover:bg-zinc-900 w-full text-center">
	{title}
</a>